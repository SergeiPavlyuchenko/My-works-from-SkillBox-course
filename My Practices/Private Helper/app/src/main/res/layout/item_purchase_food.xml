    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/roundedView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/back_23"
        app:layout_constraintBottom_toBottomOf="@id/containerItemFood"
        app:layout_constraintEnd_toEndOf="@id/containerItemFood"
        app:layout_constraintStart_toStartOf="@id/containerItemFood"
        app:layout_constraintTop_toTopOf="@id/containerItemFood"
        app:riv_border_color="@color/teal_700"
        app:riv_border_width="10dip"
        app:riv_corner_radius="10dip"
        app:riv_mutate_background="true"
        app:riv_oval="false"
        app:riv_tile_mode="repeat" />

    <LinearLayout
        android:id="@+id/containerItemFood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/dateTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            tools:text="06:05 03/03/21" />

        <ImageView
            android:id="@+id/divider1ImageView"
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:alpha="0.3"
            android:background="@color/white" />

        <TextView
            android:id="@+id/listOfPurchasesTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColor="@color/white"
            android:textSize="23sp"
            tools:text="@string/text_list_of_food" />

        <ImageView
            android:id="@+id/divider2ImageView"
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:alpha="0.3"
            android:background="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="43dp"
            android:paddingEnd="43dp">


            <ImageButton
                android:id="@+id/editItemButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/teal_700"
                android:src="@drawable/ic_edit" />

            <ImageButton
                android:id="@+id/editRememberButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/teal_700"
                android:src="@drawable/ic_time_filled" />

            <ImageButton
                android:id="@+id/addLocationButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/teal_700"
                android:src="@drawable/ic_add_location" />


        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>